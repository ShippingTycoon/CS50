#include <stdio.h>
#include <stdlib.h>
#include <stdint.h>

int main(int argc, char *argv[])
{
    //check the user has written command line argument
    if (argc != 2)
    {
        printf("Usage: ./recover image\n");
        return 1;
    }

    //open file user specifies
    FILE *file = fopen(argv[1], "r");
    if (!file)
    {
        return 1;
    }

    //create new variable type for storing bytes
    typedef uint8_t BYTE;

    //array called buffer to store bytes
    BYTE  buffer[512];

    char *filename = "000";
    int filenum = 0;
    FILE *img = NULL;

    //condition to iterate through file (hopefully!)
    for (int i = 0; i < sizeof(file); i++)
    {
        //read 512 bytes of memory card into buffer array
        fread(buffer, 512, 1, file);

        //check if jpg
        if (buffer[0] == 0xff && buffer[1] == 0xd8 && buffer[2] == 0xff && (buffer[3] & 0xf0) == 0xe0)
        {
            //check if first image
            if (filenum == 0)
            {
                sprintf(filename, "%03i.jpg", filenum); //sets format of filename to three integer digits
                filenum ++; //int representing file name
                img = fopen(filename, "w"); //open new image file and name it
                fwrite(buffer, 512, 1, img); //write 512 bytes you just read to the file you just opened
            }
            else
            {
                fclose(img);//close current image writing to
                sprintf(filename, "%03i.jpg", filenum); //sets format of filename to three integer digits
                filenum ++; //int representing file name
                img = fopen(filename, "w"); //open new image file and name it
                fwrite(buffer, 512, 1, img); //write 512 bytes you just read to the file you just opened
            }

        }
        else
        {
            fwrite(buffer, 512, 1, img);
        }
    }



}
