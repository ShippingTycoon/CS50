#include <stdio.h>
#include <stdlib.h>

int main(int argc, char *argv[])
{
    if (argc != 2)
    {
        printf("Usage: ./recover image\n");
        return 1;
    }

    FILE *file = fopen(argv[1], "r");

    typedef unit8_t BYTE;

    BYTE buffer[512];
    
    //how do i set a condition for reaching the end of the file?
    //how do I make sure fread actually iterates through? Update pointer?

    fread(buffer, 512, 1, card.raw); // does the pointer need to be in a FILE * format?

    char *filename = "000";
    int filenum = 0;

    //check if jpg
    if (buffer[0] == 0xff && buffer[1] == 0xd8 && buffer[2] == 0xff && (buffer[3] & 0xf0) == 0xe0)
    {
        sprintf(filename, "%03i.jpg", filenum) //sets format of filename to three integer digits
        filenum ++; //int representing file name
        FILE *img = fopen(filename, "w"); //open new image file and name it 
        fwrite(buffer, 512, 1, img); //write 512 bytes you just read to the file you just opened
    }

}
